{
    "manifest_version": 3,
    "name": "LegitSteamFinder",
    "version": "1.3",
    "description": "Pesquisa um jogo na Steam rapidamente pelo menu de contexto.",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    }
}